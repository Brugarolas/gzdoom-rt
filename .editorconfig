# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
insert_final_newline = false

[*.{bat,cmd}]
indent_style = space
indent_size = 4

[*.{json,yaml,yml}]
indent_style = space
indent_size = 2

[{CMakeLists.txt,*.cmake}]
indent_style = tab
indent_size = 6
